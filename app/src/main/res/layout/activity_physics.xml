<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.user59.encyclopedia.Physics">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView android:text="Физика" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phystxt"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:fontFamily="sans-serif-thin" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/physpravila"
            android:id="@+id/imageView21" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="520dp"
            android:src="@drawable/physprov"
            android:id="@+id/imageView22" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="260dp"
            android:src="@drawable/physparal"
            android:id="@+id/imageView20" />

        <ImageView
            android:layout_width="321dp"
            android:layout_height="535dp"
            android:src="@drawable/physimpuls"
            android:id="@+id/imageView19" />



    </LinearLayout>
</ScrollView>
</RelativeLayout>
